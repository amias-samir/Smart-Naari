<resources>

    <style name="AppTheme" parent="BaseTheme" />

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/white</item> 
        <item name="colorPrimaryDark">@android:color/white</item> 
        <item name="colorControlHighlight">@color/colorAccent</item> 
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="selectableItemBackground">@drawable/selectable_item_background</item>
        <item name="android:selectableItemBackground">@drawable/selectable_item_background</item>
        <item name="android:windowBackground">@color/windowBackground</item>



    </style>





    <style name="NavigationView">
        <item name="android:listDivider">@color/colorAccent</item>


    </style>


    <!-- custom style -->
    <style name="radionbutton" parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@drawable/rb_drawable</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!-- custom style ma cgup basdina radio button -->
    <style name="radionbuttonMaChupBasdina" parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@drawable/rb_drawable_ma_chup_basdina</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- style file for splash screen -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item> 

    </style>


    <!-- style file for My circle -->
    <style name="MyCircleTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorAccent</item> 
        <item name="colorPrimaryDark">@color/colorAccent</item> 
        <item name="colorControlHighlight">@color/colorPrimaryDark</item> 
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        <item name="android:windowBackground">@color/colorMyCircleBackground</item>
        <item name="selectableItemBackground">@drawable/selectable_item_background</item>
        <item name="android:selectableItemBackground">@drawable/selectable_item_background</item>


    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="SmartNaariSpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/smart_naari_spinner_bg</item>
    </style>

    <style name="SmartNaariInputLayoutTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/smart_naari_edit_text_bg</item>
    </style>

    <style name="ListSeparatorTextView" parent="@android:style/Widget.TextView.ListSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">true</item>
        <!--<item name="android:background">@drawable/list_section_divider</item>-->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>

    </style>
</resources>
