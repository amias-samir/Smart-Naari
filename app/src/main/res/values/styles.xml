        <item name="android:windowBackground">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>
    </style>

    <!--custom font style-->
    <style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:lineSpacingExtra">@dimen/spacing_xsmall</item>
        <item name="android:textAppearance">@style/TextAppearance.FontPath</item>
    </style>
    <style name="TextAppearance.FontPath" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">font/ColabThi.otf</item>
    </style>


    <style name="NavigationView">
        <item name="android:listDivider">@color/colorAccent</item>
    </style>



    <!-- custom style -->
    <style name="radionbutton" parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@drawable/rb_drawable</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- custom style ma cgup basdina radio button -->
    <style name="radionbuttonMaChupBasdina" parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@drawable/rb_drawable_ma_chup_basdina</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- style file for splash screen -->
    <style name="SplashTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item> 
    </style>

    <style name="SignUpTheme" parent="BaseTheme">
        <item name="colorControlHighlight">@color/colorAccent</item>
