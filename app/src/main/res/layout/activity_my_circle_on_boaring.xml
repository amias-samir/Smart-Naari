<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_my_circle_on_boarding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context="com.nepal.naxa.smartnaari.mycircle.MyCircleOnBoardingActivity">


    <RelativeLayout
        android:id="@+id/layout_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/btn_close_video_layout"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:contentDescription="Close video"
            android:padding="@dimen/spacing_small"
            android:src="@drawable/ic_close"
            android:tint="@color/colorWhite"
            tools:ignore="HardcodedText" />


        <com.afollestad.easyvideoplayer.EasyVideoPlayer

            app:evp_themeColor="@color/colorWhite"
            android:layout_centerInParent="true"
            android:id="@+id/player"
            android:layout_width="match_parent"
            android:layout_height="300dp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_config_complete"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvSucessSetup"
            android:layout_centerHorizontal="true"

            android:src="@drawable/thumb_up_outline"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tvSucessSetup"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Configuration completed successfully."

            android:textSize="@dimen/material_text_subhead" />

        <Button
            android:id="@+id/btn_open_app"
            style="@style/Base.TextAppearance.AppCompat.Widget.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSucessSetup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/spacing_medium"
            android:background="@color/colorAccent"
            android:text="Open" />

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/swype.card"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="@dimen/spacing_medium"
        android:visibility="visible"
        app:contentPadding="@dimen/spacing_large"
        app:layout_anchorGravity="bottom"
        card_view:cardCornerRadius="4dp"
        card_view:cardUseCompatPadding="true">


        <TextView
            android:id="@+id/tv_swipe_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="6dp"
            android:textSize="@dimen/material_text_subhead" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:fontFamily="sans-serif-medium"
            android:text="@string/msg_swipe_this_card"
            android:textAllCaps="true"

            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_setup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:cardUseCompatPadding="true">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvSetupTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_large"
                android:text="Setup"
                android:textColor="@color/colorGreen_900"
                android:textSize="@dimen/material_text_title"
                android:textStyle="bold" />

            <ernestoyaquello.com.verticalstepperform.VerticalStepperFormLayout
                android:id="@+id/vertical_stepper_form"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tvSetupTitle" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@+id/layout_thank_you"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:visibility="gone">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Thank you"
            android:textSize="@dimen/material_text_headline" />

        <nl.dionsegijn.konfetti.KonfettiView
            android:id="@+id/viewKonfetti"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
