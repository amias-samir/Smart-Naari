<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.nepal.naxa.smartnaari.login.ForgotPasswordActivity">

    <include
        android:id="@+id/toolbar_layout_header"
        layout="@layout/toolbar_layout"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical">

            <!--pin-->
            <LinearLayout
                android:id="@+id/pin_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/default_padding"
                    android:text="@string/enter_pin_to_reset_pw_text" />

                <EditText
                    android:id="@+id/tv_pin_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_xxlarge"
                    android:layout_marginRight="@dimen/spacing_xxlarge"
                    android:layout_marginTop="@dimen/spacing_xxlarge"
                    android:background="@drawable/edit_text_boarder_recg_white_bg_red_boarder"
                    android:gravity="center"
                    android:hint="enter your pin"
                    android:padding="@dimen/default_padding" />

                <Button
                    android:id="@+id/btn_pin_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_xxxlarge"
                    android:background="@drawable/button_red_background"
                    android:text="@string/evp_submit"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite" />

            </LinearLayout>

            <!--reset-->
            <LinearLayout
                android:id="@+id/password_reset_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/default_padding"
                    android:text="Reset Your Password" />

                <EditText
                    android:id="@+id/tv_password_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_xxlarge"
                    android:layout_marginRight="@dimen/spacing_xxlarge"
                    android:layout_marginTop="@dimen/spacing_xxlarge"
                    android:background="@drawable/edit_text_boarder_recg_white_bg_red_boarder"
                    android:gravity="center"
                    android:hint="enter new password"
                    android:padding="@dimen/default_padding" />

                <EditText
                    android:id="@+id/tv_confirm_password_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_xxlarge"
                    android:layout_marginRight="@dimen/spacing_xxlarge"
                    android:layout_marginTop="@dimen/spacing_xxlarge"
                    android:background="@drawable/edit_text_boarder_recg_white_bg_red_boarder"
                    android:gravity="center"
                    android:hint="confirm your password"
                    android:padding="@dimen/default_padding" />

                <Button
                    android:id="@+id/btn_password_reset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_xxxlarge"
                    android:background="@drawable/button_red_background"
                    android:text="Reset"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite" />

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
