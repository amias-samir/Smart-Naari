<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_xsmall"
    android:layout_marginTop="@dimen/spacing_xsmall"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_xsmall"
            android:layout_marginLeft="@dimen/spacing_xxsmall"
            android:layout_marginRight="@dimen/spacing_xxsmall"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tap_it_stop_it_dialog_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/spacing_xxsmall"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="@dimen/spacing_small"
                android:text="Contact Name" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_xxsmall"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tap_it_stop_it_dialog_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_phone_forwarded"
                    android:gravity="center"
                    android:padding="@dimen/spacing_small"
                    android:text="numbers" />

                <TextView
                    android:id="@+id/tap_it_stop_it_dialog_number2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_phone_forwarded"
                    android:gravity="center"
                    android:padding="@dimen/spacing_small"
                    android:text="numbers"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/top_layout"
            android:layout_marginTop="@dimen/spacing_xxsmall"
            android:background="@color/colorAccent" />


    </RelativeLayout>

</LinearLayout>
