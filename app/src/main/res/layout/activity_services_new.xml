<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/greenishwhite"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:elevation="@dimen/elevation_high"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <android.support.v7.widget.Toolbar

            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </android.support.design.widget.AppBarLayout>



    <fragment
        android:id="@+id/fragMap"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/act_services_title_wrapper" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/act_services_recycler_map_legend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/fragMap"
        android:layout_margin="@dimen/spacing_medium"
        android:background="@color/halfWhiteTransparent"
        />


    <RelativeLayout
        android:id="@+id/layout_services"
        android:background="@color/kashmirGreenLight"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_centerInParent="true"
            android:scaleType="centerInside"
            android:id="@+id/iv_header_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/grid_services" />

        <TextView
            android:layout_below="@id/iv_header_image"
            android:layout_centerInParent="true"
            android:id="@+id/tv_loading_msg"
            android:text="Loading.."
            android:textSize="@dimen/material_text_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ProgressBar
           android:visibility="gone"
            android:layout_below="@id/iv_header_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</RelativeLayout>