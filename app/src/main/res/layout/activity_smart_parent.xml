<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nepal.naxa.smartnaari.smartparent.SmartParentActivity">

    <include
        android:id="@+id/toolbarTopLayout"
        layout="@layout/toolbar_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbarTopLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <!--smart parenting img and text-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/windowBackground">

                <ImageView
                    android:id="@+id/imgViewSmartParenting"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/ic_smart_parenting" />

                <!--<TextView-->
                <!--android:id="@+id/smart_parenting_tvLBL"-->
                <!--android:layout_below="@+id/imgViewSmartParenting"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="SMART Parenting"-->
                <!--android:gravity="center"-->
                <!--android:padding="@dimen/default_padding"-->
                <!--android:textSize="@dimen/material_text_headline" />-->

                <!--smart Parentinf lbl-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imgViewSmartParenting"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingBottom="@dimen/default_padding"
                        android:paddingLeft="@dimen/default_padding"
                        android:paddingTop="@dimen/default_padding"
                        android:text="SMART "
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/material_text_display1"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:paddingBottom="@dimen/default_padding"
                        android:paddingRight="@dimen/default_padding"
                        android:paddingTop="@dimen/default_padding"
                        android:text="Parenting"
                        android:textSize="@dimen/material_text_display1" />

                </LinearLayout>

            </RelativeLayout>


            <TextView
                android:id="@+id/smart_parenting_lets_have_talkLBL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/default_padding"
                android:textSize="@dimen/material_text_headline" />


            <TextView
                android:textColor="@color/colorGray"
                android:id="@+id/list_item_yuwa_pusta_question_tv_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_medium"
                android:text="@string/question"
                android:textAlignment="center"
                android:textSize="@dimen/material_text_subhead" />

            <TextView
                android:textColor="@color/colorGray"
                android:id="@+id/list_item_yuwa_pusta_question_tv_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_medium"
                android:text="@string/answer"
                android:textAlignment="center"
                android:textSize="@dimen/material_text_subhead" />


            <include layout="@layout/short_red_line"/>


            <TextView
                android:textColor="@color/colorGray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_medium"
                android:text="@string/question"
                android:textAlignment="center"
                android:textSize="@dimen/material_text_subhead" />

            <TextView
                android:textColor="@color/colorGray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_medium"
                android:text="@string/answer"
                android:textAlignment="center"
                android:textSize="@dimen/material_text_subhead" />





            <ImageView
                android:id="@+id/ivTeensChart"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="10dp"
                android:src="@drawable/teens_chart"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_margin="@dimen/activity_horizontal_margin">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <Button
                        android:id="@+id/btn2To12Years"
                        android:layout_width="wrap_content"
                        android:layout_height="65dp"
                        android:layout_marginLeft="@dimen/spacing_small"
                        android:layout_marginRight="@dimen/spacing_small"
                        android:background="@drawable/button_red_background"
                        android:text="2-12 year's \n Old"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:layout_alignParentBottom="true" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <Button
                        android:id="@+id/btnEarlyTeens"
                        android:layout_width="wrap_content"
                        android:layout_height="95dp"
                        android:layout_marginLeft="@dimen/spacing_small"
                        android:layout_marginRight="@dimen/spacing_small"
                        android:background="@drawable/button_red_background"
                        android:text="Early Teen's"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <Button
                        android:id="@+id/btnMidTeens"
                        android:layout_width="wrap_content"
                        android:layout_height="125dp"
                        android:layout_marginLeft="@dimen/spacing_small"
                        android:layout_marginRight="@dimen/spacing_small"
                        android:background="@drawable/button_red_background"
                        android:text="Mid Teen's"
                        android:textColor="@color/colorWhite"
                        android:textAllCaps="false"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>

            </LinearLayout>





        </LinearLayout>


    </ScrollView>


</RelativeLayout>
