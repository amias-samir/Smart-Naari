<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nepal.naxa.smartnaari.YuwaPustaQueryDetailsActivity">


    <include layout="@layout/toolbar_layout"
        android:id="@+id/toolbar_layout_header"/>

    <ScrollView
        android:layout_below="@id/toolbar_layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_small"
            android:layout_margin="@dimen/spacing_medium">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/textPrimary"
                    android:id="@+id/tv_word_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_medium"

                    android:textSize="@dimen/material_text_headline"
                    android:textAppearance="@android:style/TextAppearance.Small" />


                <TextView
                    android:textColor="@color/colorGray"
                    android:id="@+id/tv_word_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_medium"
                    android:textSize="@dimen/material_text_body1"
                    android:textAllCaps="false"
                    android:paddingBottom="@dimen/activity_horizontal_margin"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </ScrollView>

</RelativeLayout>
