<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/general_recycler_empty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/tv_recycler_view_empty_msg"
        android:src="@drawable/ic_info_red_300_36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_margin="@dimen/spacing_medium"
        android:id="@+id/tv_recycler_view_empty_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_recycler_view_refresh"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="It's empty here ! Consider Refreshing"
        android:textSize="@dimen/material_text_body1" />


    <Button
        android:id="@+id/btn_recycler_view_refresh"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Refresh" />

</RelativeLayout>