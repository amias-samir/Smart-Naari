<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp"
        tools:src="@drawable/ic_profile_background" />

    <TextView
        android:id="@+id/tv_title_black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="150dp"
        android:layout_marginStart="20dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="8dp"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintHorizontal_bias="0.077"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="White title" />

    <TextView
        android:id="@+id/tv_title_white"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="150dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="8dp"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_title_black"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_cover"
        app:layout_constraintVertical_bias="1.0"
        tools:text="Article title in two lines" />


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-21dp"
        android:background="#b9262626"
        app:layout_constraintBottom_toTopOf="@+id/linear_content"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/iv_expandable_indicator"
            android:layout_width="28dp"
            android:layout_height="31dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:foregroundGravity="center_vertical"
            android:src="@drawable/ic_circle_down_white" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/expand_image_view"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:src="@drawable/ic_facebook" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#662e2e2e"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/expand_photo_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Recipe: Thai Curry"
                    android:textColor="#ffffff"
                    android:textSize="18dp" />

            </RelativeLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/iv_expand_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="Title"
            android:textColor="#959595"
            android:textSize="24dp"
            tools:ignore="ObsoleteLayoutParam" />

        <org.sufficientlysecure.htmltextview.HtmlTextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="25dp"
            android:text="Some interesting text which is hidden by default. It can be expanded or collapsed."
            android:textColor="#959595" />

        <TextView
            android:id="@+id/tv_share_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginStart="35dp"
            android:text="Share On"
            android:textColor="#666666" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_facebook_btn"
                android:layout_width="28dp"
                android:layout_height="31dp"
                app:srcCompat="@drawable/ic_facebook_red" />

            <ImageView
                android:id="@+id/iv_insta_btn"
                android:layout_width="28dp"
                android:layout_height="31dp"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/ic_instagram_red" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_weight="4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/iv_expand_title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Favorite"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/iv_expand_title4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Rate"
                android:textColor="#666666" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_weight="4"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left">

                <com.like.LikeButton
                    android:id="@+id/iv_favorite"
                    app:icon_size="32dp"
                    app:like_drawable="@drawable/ic_favorite_full_red"
                    app:unlike_drawable="@drawable/ic_favorite_red"
                    android:layout_width="32dp"
                    android:layout_height="32dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="horizontal">

                <com.like.LikeButton
                    android:id="@+id/iv_rate_one"
                    app:icon_size="32dp"
                    app:like_drawable="@drawable/ic_rate_full_red"
                    app:unlike_drawable="@drawable/ic_rate_red"
                    android:layout_width="32dp"
                    android:layout_height="32dp" />

                <com.like.LikeButton
                    android:id="@+id/iv_rate_two"
                    app:icon_size="32dp"
                    app:like_drawable="@drawable/ic_rate_full_red"
                    app:unlike_drawable="@drawable/ic_rate_red"
                    android:layout_width="32dp"
                    android:layout_height="32dp" />

                <com.like.LikeButton
                    android:id="@+id/iv_rate_three"
                    app:icon_size="32dp"
                    app:like_drawable="@drawable/ic_rate_full_red"
                    app:unlike_drawable="@drawable/ic_rate_red"
                    android:layout_width="32dp"
                    android:layout_height="32dp" />

                <com.like.LikeButton
                    android:id="@+id/iv_rate_four"
                    app:icon_size="32dp"
                    app:like_drawable="@drawable/ic_rate_full_red"
                    app:unlike_drawable="@drawable/ic_rate_red"
                    android:layout_width="32dp"
                    android:layout_height="32dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_time"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="384dp"
        tools:text="Android" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_circle_down_white"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:padding="8dp"
        android:textSize="12sp"
        android:visibility="gone"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="160dp"
        tools:text="Two hours" />


</android.support.constraint.ConstraintLayout>