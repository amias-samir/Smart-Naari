<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nepal.naxa.smartnaari.register.SignUpActivity"
    android:background="@color/colorSignupBackground"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/top_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/signup_white_background_header" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logo" />
        </LinearLayout>

    </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
        <LinearLayout
            android:id="@+id/top_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="vertical">

            <!-- username input layout-->
            <EditText
                android:id="@+id/user_name_input_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_boarder_recg"
                android:ems="10"
                android:hint="Enter your name"
                android:inputType="textPersonName"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/textSecondary"
                android:gravity="center"
                android:textSize="16dp" />

            <!-- password input layout-->
            <EditText
                android:id="@+id/user_password_input_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_boarder_recg"
                android:ems="10"
                android:hint="Enter your Password"
                android:inputType="textPersonName"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/textSecondary"
                android:gravity="center"
                android:textSize="16dp" />

            <!-- confirm password input layout-->
            <EditText
                android:id="@+id/user_confirm_password_input_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_boarder_recg"
                android:ems="10"
                android:hint="Confirm your Password"
                android:inputType="textPersonName"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/textSecondary"
                android:gravity="center"
                android:textSize="16dp" />

            <!--Name and surname layout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <!-- first name input layout-->
                <EditText
                    android:id="@+id/user_firstname_input_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_boarder_recg"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Name"
                    android:inputType="textPersonName"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/textSecondary"
                    android:textSize="16dp" />

                <!-- Sur name input layout-->
                <EditText
                    android:id="@+id/user_surname_input_id"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_boarder_recg"
                    android:ems="10"
                    android:hint="Surname"
                    android:inputType="textPersonName"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/textSecondary"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>

            <!--Age and sex layout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- first name input layout-->
                <EditText
                    android:id="@+id/user_age_input_id"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_boarder_recg"
                    android:ems="10"
                    android:hint="Age"
                    android:inputType="date"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/textSecondary"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:layout_marginRight="5dp"
                    android:focusable="false"/>

                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="5dp">

                    <RadioButton android:id="@+id/radio_sex_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" M "
                        android:checked="true"
                        android:textColor="@color/colorWhite"
                        android:onClick="onRadioButtonClicked"
                        style="@style/radionbutton" />

                    <RadioButton android:id="@+id/radio_sex_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" F "
                        android:textColor="@color/colorWhite"
                        android:onClick="onRadioButtonClicked"
                        style="@style/radionbutton" />

                    <RadioButton android:id="@+id/radio_sex_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Other"
                        android:textColor="@color/colorWhite"
                        android:onClick="onRadioButtonClicked"
                        style="@style/radionbutton" />
                </RadioGroup>


            </LinearLayout>

            <!-- birth place input layout-->
            <EditText
                android:id="@+id/user_birth_place_input_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_boarder_recg"
                android:ems="10"
                android:hint="Place of Birth"
                android:inputType="textAutoComplete"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/textSecondary"
                android:gravity="center"
                android:textSize="16dp" />

            <!-- current place input layout-->
            <EditText
                android:id="@+id/user_current_place_input_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_boarder_recg"
                android:ems="10"
                android:hint="Current Residence"
                android:inputType="textAutoComplete"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/textSecondary"
                android:gravity="center"
                android:textSize="16dp" />

            <!-- email input layout-->
            <EditText
                android:id="@+id/user_email_input_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_boarder_recg"
                android:ems="10"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/textSecondary"
                android:gravity="center"
                android:textSize="16dp" />

            <!-- contct no input layout-->
            <EditText
                android:id="@+id/user_contact_no_input_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_boarder_recg"
                android:ems="10"
                android:hint="Mobile Number"
                android:inputType="number"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/textSecondary"
                android:gravity="center"
                android:textSize="16dp" />

        </LinearLayout>


                <!-- Terms and condition-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/cb_terms_and_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:layout_marginLeft="25dp"/>

                    <TextView
                        android:layout_toEndOf="@id/cb_terms_and_condition"
                        android:layout_toRightOf="@id/cb_terms_and_condition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="I agree that all the information about me is correct and willingly given. I do not support false reporting and i am fully responsible for any report that i make on Gender Based Violence."
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:textColor="@color/textSecondary"
                        android:textSize="16dp"/>

                </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bottom_relative_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:orientation="vertical"
                android:layout_marginBottom="50dp">


                <Button
                    android:drawableRight="@drawable/ic_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign in"
                    android:background="@color/transparent"
                    android:textColor="@color/textSecondary"
                    android:textAllCaps="false"
                    android:textSize="18dp"
                    android:layout_alignParentRight="true"/>

                <!--<ImageButton-->
                    <!--android:id="@+id/btnRight"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_centerHorizontal="true"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:background="@color/transparent"-->
                    <!--android:src="@drawable/ic_right" />-->

            </RelativeLayout>


            </LinearLayout>


        </ScrollView>

    </LinearLayout>


</RelativeLayout>
