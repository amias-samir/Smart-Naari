<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
       >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/emergency_dialog_title"
            android:padding="@dimen/default_padding"
            android:text="Emergency Dialog Headibg"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_toLeftOf="@id/btn_close_dialog"
            android:visibility="gone"/>


        <Button
            android:id="@+id/btn_close_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_dialog_white_close"
            android:drawableRight="@drawable/ic_close_red"
            android:gravity="center"
            android:padding="@dimen/default_padding"
            android:stateListAnimator="@null"
            android:textColor="@color/colorAccent"
            android:text="close"
            />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_above="@id/bottom_layout"
        android:layout_margin="@dimen/spacing_large"
        android:id="@+id/rv_contact_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    </android.support.v7.widget.RecyclerView>



</RelativeLayout>
