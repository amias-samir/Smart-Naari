<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nepal.naxa.smartnaari.friendsofsmartnaari.FriendsOfSmartNaariExpandableActivity"
    android:background="@color/halfWhiteTransparent">

    <include layout="@layout/toolbar_layout"
        android:id="@+id/toolbar_layout_header">
    </include>

    <LinearLayout
        android:layout_below="@id/toolbar_layout_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        >

        <TextView
            android:padding="@dimen/default_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/acknowledging_friends_text"
            android:background="@color/colorWhite"/>

        <ExpandableListView
            android:id="@+id/lvExp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/expListView_background" />
    </LinearLayout>

</RelativeLayout>
