<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nepal.naxa.smartnaari.YuwaPustaQueryDetailsActivity">


    <include layout="@layout/toolbar_layout"
        android:id="@+id/toolbar_layout_header"/>

    <ScrollView
        android:layout_below="@id/toolbar_layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_small"
            android:layout_margin="@dimen/spacing_medium">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <org.sufficientlysecure.htmltextview.HtmlTextView
        android:textColor="@color/textPrimary"
        android:id="@+id/yuwa_pusta_query_details_tv_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        android:text="@string/question"
        android:textSize="@dimen/material_text_headline"
        android:textAppearance="@android:style/TextAppearance.Small" />


    <org.sufficientlysecure.htmltextview.HtmlTextView
        android:textColor="@color/colorGray"
        android:id="@+id/yuwa_pusta_query_details_tv_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        android:text="@string/answer"
        android:textSize="@dimen/material_text_body1"
        android:textAppearance="@android:style/TextAppearance.Small" />

        </LinearLayout>
        </android.support.v7.widget.CardView>

    </ScrollView>

</RelativeLayout>
