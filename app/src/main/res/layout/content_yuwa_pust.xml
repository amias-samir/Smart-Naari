<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.nepal.naxa.smartnaari.yuwapusta.YuwaPustActivity"
    tools:showIn="@layout/activity_yuwa_pust">


    <ImageView
        android:id="@+id/yuwa_pusta_iv_header"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/grid_yuwa_pusta"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView

        android:id="@+id/yuwa_pusta_act_tv_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yuwa Pusta"
        android:textAlignment="center"
        android:textSize="@dimen/material_text_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yuwa_pusta_iv_header" />

    <TextView
        android:layout_margin="@dimen/spacing_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Owl at your disposal, about LIFE, LOVE, and yes even SEX "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yuwa_pusta_act_tv_header" />


    <android.support.v7.widget.RecyclerView
        android:padding="@dimen/spacing_large"
        android:background="@android:color/white"
        android:id="@+id/yuwa_pusta_act_rv_owlslist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:padding="@dimen/spacing_large"
        android:background="@android:color/white"
        android:id="@+id/yuwa_pusta_act_rv_reviewslist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ask an Owl" />

</LinearLayout>

