<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.nepal.naxa.smartnaari.yuwapusta.YuwaPustaActivity"
    tools:showIn="@layout/activity_yuwa_pust">


    <ImageView
        android:id="@+id/yuwa_pusta_iv_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cover_photo_height"
        android:src="@drawable/grid_yuwa_pusta"


        />

    <TextView
        android:id="@+id/yuwa_pusta_act_tv_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_small"

        android:textAlignment="center"
        android:textSize="@dimen/material_text_title" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="@dimen/spacing_large">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_large"
            android:text="@string/yuwa_pusta_heading"
            android:textAlignment="center"
            android:textSize="@dimen/material_text_subhead"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/yuwa_pusta_act_tv_header" />


        <include layout="@layout/short_red_line" />




        <android.support.v7.widget.RecyclerView
            android:id="@+id/yuwa_pusta_act_rv_owlslist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:background="@android:color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_ask_a_owl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:layout_marginTop="@dimen/spacing_medium"
                android:background="@drawable/button_get_contact_my_circle"
                android:gravity="center"
                android:paddingBottom="@dimen/default_padding"
                android:paddingLeft="@dimen/default_padding"
                android:paddingRight="@dimen/default_padding"
                android:paddingTop="@dimen/default_padding"
                android:stateListAnimator="@null"
                android:text="@string/btn_ask_an_owl"
                android:textColor="@color/colorWhite"
                />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/yuwa_pusta_act_rv_reviewslist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />



    </LinearLayout>


</LinearLayout>

