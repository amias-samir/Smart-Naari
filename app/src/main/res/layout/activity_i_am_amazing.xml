<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/elevation_high"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <android.support.v7.widget.Toolbar

            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_bar_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="220dp"
                android:background="@color/imageBackgroundGrey"
                android:padding="@dimen/spacing_large"
                android:src="@drawable/grid_i_am_amazing" />

            <TextView
                android:id="@+id/tvIAmAmazingDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/spacing_mlarge"
                android:text="@string/i_am_amazing_detail"
                android:textColor="@color/colorGray"
                android:textStyle="italic" />

            <include layout="@layout/short_red_line" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:layout_marginTop="@dimen/spacing_xxlarge"
                android:gravity="center"
                android:text="@string/person_of_the_month"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/material_text_subhead" />

            <ImageView
                android:id="@+id/ivIAmAmazingPersonOfTheMonth"
                android:layout_width="@dimen/big_icon_size"
                android:layout_height="@dimen/big_icon_size"
                android:layout_gravity="center"
                android:background="@drawable/image_view_person_of_the_month" />

            <at.blogc.android.views.ExpandableTextView
                android:id="@+id/etv_person_of_the_month_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="4"
                android:paddingLeft="@dimen/spacing_mlarge"
                android:paddingRight="@dimen/spacing_mlarge"
                android:paddingTop="@dimen/spacing_mlarge"
                android:text="@string/person_of_the_month_detail"
                android:textColor="@color/colorGray"
                android:textStyle="italic"
                app:animation_duration="750" />

            <Button
                android:id="@+id/btn_toggle_i_am_amazing"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/spacing_xlarge"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:padding="@dimen/spacing_small"
                android:text="Read More >>"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent" />

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@color/colorWhite"
                android:src="@drawable/pheonix" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_medium"
                android:gravity="center"
                android:text="@string/i_am_amazing_click_to_look"
                android:textColor="@color/colorGray"
                android:textStyle="italic" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>