<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:elevation="@dimen/elevation_high"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <android.support.v7.widget.Toolbar

            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/act_services_title_wrapper"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_below="@id/app_bar_layout"
        android:background="@color/colorRedLight"
        android:gravity="center">

        <TextView
            android:layout_width="200dp"
            android:layout_height="220dp"
            android:background="@drawable/grid_services"
            android:gravity="center"
            android:paddingTop="160dp"
            android:text="Time is of essence"
            android:textStyle="bold" />
    </LinearLayout>


    <fragment
        android:id="@+id/fragMap"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/act_services_title_wrapper" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/act_services_recycler_map_legend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/fragMap"
        android:layout_alignEnd="@id/fragMap"
        android:layout_alignRight="@id/fragMap"
        android:layout_margin="@dimen/spacing_medium"
        android:background="@color/colorWhite" />


</RelativeLayout>