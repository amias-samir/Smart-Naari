<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:elevation="@dimen/elevation_high"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <android.support.v7.widget.Toolbar

            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout

        android:id="@+id/act_services_title_wrapper"
        android:layout_width="match_parent"
        android:layout_height="@dimen/services_cover_photo_height"
        android:layout_below="@id/app_bar_layout"
        android:background="@color/greenishwhat"
        android:gravity="center">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/grid_services" />

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:gravity="center"
            android:paddingTop="100dp"
            android:text="Time is of essence"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/spinner_district_list_services"
                style="@style/DistrictListServicesSpinnerTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_toEndOf="@id/tv_type_of_violence"
                android:layout_toRightOf="@id/tv_type_of_violence"
                android:gravity="center" />
        </FrameLayout>
    </RelativeLayout>


    <fragment
        android:id="@+id/fragMap"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/act_services_title_wrapper" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/act_services_recycler_map_legend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/fragMap"
        android:layout_margin="@dimen/spacing_medium"
        android:background="@color/halfWhiteTransparent"
        />
    <!--android:layout_alignEnd="@id/fragMap"-->
    <!--android:layout_alignRight="@id/fragMap"-->

</RelativeLayout>