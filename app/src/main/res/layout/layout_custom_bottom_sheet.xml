<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <!--<ImageView-->
        <!--android:id="@+id/backdrop"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:scaleType="centerCrop"-->
        <!--android:src="@color/iron" />-->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@color/black_alpha_40" />


    <RelativeLayout
        android:id="@+id/content_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/spacing_large">

        <ImageButton
            android:visibility="gone"
            android:id="@+id/back"
            android:background="@color/transparent"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_toRightOf="@id/back"
            android:id="@+id/office_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/bottomsheet_text_color"
            android:textSize="@dimen/material_text_title"
            android:text="Office Name"

            />

        <TextView
            android:id="@+id/office_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/office_name"
            android:layout_marginTop="@dimen/spacing_xxsmall"
            android:textColor="@color/bottomsheet_text_color"
            android:textSize="@dimen/material_text_body1"
            android:text="Office Address"/>

        <TextView
            android:id="@+id/office_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/office_address"
            android:layout_marginTop="@dimen/spacing_xxsmall"
            android:textColor="@color/bottomsheet_text_color"
            android:textSize="@dimen/material_text_body1"
            android:text="Office Type"
            />

        <TextView
            android:id="@+id/office_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/office_type"
            android:layout_marginTop="@dimen/spacing_xxsmall"
            android:textColor="@color/bottomsheet_text_color"
            android:textSize="@dimen/material_text_body1"
            android:text="Office Email"
            />

        <TextView
            android:id="@+id/office_cheif_landline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/office_email"
            android:layout_marginTop="@dimen/spacing_xxsmall"
            android:textColor="@color/bottomsheet_text_color"
            android:textSize="@dimen/material_text_body1"
            android:text="Office Cheif Landline"
            />

        <TextView
            android:id="@+id/office_cheif_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/office_cheif_landline"
            android:layout_marginTop="@dimen/spacing_xxsmall"
            android:textColor="@color/bottomsheet_text_color"
            android:textSize="@dimen/material_text_body1"
            android:text="Office Cheif Landline"
            />

        <TextView
            android:id="@+id/office_landline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/office_cheif_mobile"
            android:layout_marginTop="@dimen/spacing_xxsmall"
            android:textColor="@color/bottomsheet_text_color"
            android:textSize="@dimen/material_text_body1"
            android:text="Office Landline"
            />

        <TextView
            android:id="@+id/office_contact_duty_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/office_landline"
            android:layout_marginTop="@dimen/spacing_xxsmall"
            android:textColor="@color/bottomsheet_text_color"
            android:textSize="@dimen/material_text_body1"
            android:text="Contact Duty Person no."
            />



    </RelativeLayout>

</FrameLayout>


