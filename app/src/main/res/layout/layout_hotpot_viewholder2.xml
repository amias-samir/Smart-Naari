<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivExample"
        android:layout_width="0dp"
        android:layout_height="260dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/drawer_background"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/cardview_shadow_start_color"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="8dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/ivExample"
        app:layout_constraintRight_toRightOf="@+id/ivExample"
        tools:text="Article title in two lines"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toTopOf="@+id/ivExample"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0" />

