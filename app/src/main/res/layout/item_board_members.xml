<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:ignore="NamespaceTypo"
    expandableTextView:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <ImageView
            android:id="@+id/iv_member_image"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/food_1" />

        <TextView
            android:id="@+id/tv_member_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/spacing_large"
            android:layout_marginRight="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_large"
            android:layout_toEndOf="@id/iv_member_image"
            android:layout_toRightOf="@id/iv_member_image"
            android:fitsSystemWindows="true"
            android:maxLines="6"
            android:minLines="1"
            android:text="Paaaaaaan Name, Smart Post"
            android:textSize="@dimen/material_text_title" />

        <TextView
            android:id="@+id/tv_external_post_office"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_member_name"
            android:layout_toRightOf="@id/iv_member_image"
            android:text="External Post and office"
            android:textColor="@color/textSubtitle"
            android:visibility="gone" />

        <at.blogc.android.views.ExpandableTextView
            android:id="@+id/etv_member_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_toggle"
            android:layout_marginTop="@dimen/spacing_mlarge"
            android:ellipsize="end"
            android:maxLines="0"
            android:text="@string/lorem_ipsum"
            android:textColor="@color/textSubtitle"
            app:animation_duration="750" />

        <ImageButton
            android:id="@+id/btn_toggle"
            android:layout_width="@dimen/spacing_mlarge"
            android:layout_height="@dimen/spacing_mlarge"
            android:layout_alignEnd="@+id/tv_member_name"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/tv_member_name"
            android:background="@drawable/ic_keyboard_arrow_down_black_24dp" />

        <!--android:text="More"-->
        <!--android:textColor="@color/colorGray"-->

    </RelativeLayout>


</android.support.v7.widget.CardView>