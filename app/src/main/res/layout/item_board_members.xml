<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    expandableTextView:cardUseCompatPadding="true"
    app:ignore="NamespaceTypo">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_member_image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/spacing_large"
            android:paddingRight="@dimen/spacing_large"
            android:paddingTop="@dimen/spacing_large"
            >

            <TextView
                android:id="@+id/tv_member_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Person Name, Smart Post"
                android:textSize="@dimen/material_text_title"
                />

            <TextView
                android:id="@+id/tv_external_post_office"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_member_name"
                android:text="External Post and office"
                android:textColor="@color/textSubtitle"/>

            <at.blogc.android.views.ExpandableTextView
                android:id="@+id/etv_member_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_external_post_office"
                android:layout_marginTop="@dimen/spacing_mlarge"
                android:ellipsize="end"
                android:maxLines="0"
                android:textColor="@color/textSubtitle"
                android:text="@string/lorem_ipsum"
                app:animation_duration="750" />

            <ImageButton
                android:id="@+id/btn_toggle"
                android:layout_width="@dimen/spacing_mlarge"
                android:layout_height="@dimen/spacing_mlarge"
                android:layout_alignParentRight="true"
                android:layout_below="@id/etv_member_description"
                android:gravity="end"
                android:background="@drawable/ic_keyboard_arrow_down_black_24dp"
                android:layout_margin="@dimen/activity_vertical_margin"
                />

            <!--android:text="More"-->
            <!--android:textColor="@color/colorGray"-->

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>