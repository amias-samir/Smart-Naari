<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_large"
    android:orientation="vertical"
    app:ignore="NamespaceTypo">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/spacing_mlarge"
        android:paddingRight="@dimen/spacing_mlarge"
        android:paddingTop="@dimen/spacing_mlarge">

        <ImageView
            android:id="@+id/iv_member_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_member_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_member_image"
            android:text="Person Name"
            android:textSize="@dimen/material_text_title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_smart_naari_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_external_post_office"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacing_small"
            android:layout_toRightOf="@+id/tv_member_name"
            android:paddingBottom="@dimen/spacing_xsmall"
            android:text="Smart Naari Post" />

        <TextView
            android:id="@+id/tv_external_post_office"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_member_name"
            android:text="External Post and office" />

        <at.blogc.android.views.ExpandableTextView
            android:id="@+id/etv_member_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_external_post_office"
            android:ellipsize="end"
            android:maxLines="0"
            android:text="@string/lorem_ipsum"
            app:animation_duration="750" />

        <Button
            android:id="@+id/btn_toggle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/spacing_xlarge"
            android:layout_alignParentRight="true"
            android:layout_below="@id/etv_member_description"
            android:background="@android:color/transparent"
            android:gravity="end"
            android:paddingTop="@dimen/spacing_small"
            android:text="More"
            android:textColor="@color/colorGray" />


    </RelativeLayout>

</android.support.v7.widget.CardView>