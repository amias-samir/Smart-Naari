<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/tv_services_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="@dimen/material_text_subhead"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_services_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textSize="@dimen/material_text_body2"
        android:textColor="@color/textSubtitle"/>

    <TextView
        android:id="@+id/tv_services_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="distance in Km."
        android:textSize="@dimen/material_text_body2"
        android:textColor="@color/textSubtitle"
        />

    <ImageView
        android:layout_marginTop="@dimen/spacing_xsmall"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray"/>
</LinearLayout>